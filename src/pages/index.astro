---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.vue";
import { getCollection } from "astro:content";

// Get content from collections
const coursesContent = await getCollection("courses");
const visitorsContent = await getCollection("visitors");
const historyContent = await getCollection("history");

// Get specific content items
const clubHistory = historyContent.find((item) => item.slug === "club-history");
const visitorInfo = visitorsContent.find(
  (item) => item.slug === "visitor-information"
);
const courseInfo = coursesContent.find((item) => item.slug === "heaton-moor");
