---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const membershipContent = await getCollection("membership");
---

<Layout title="Membership - Heaton Moor Golf Club">
  <!-- Hero Section -->
  <div
    class="bg-gradient-to-r from-golf-green-700 to-golf-green-500 text-white py-16"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Join Our Club</h1>
        <p class="text-xl text-golf-green-100 max-w-3xl mx-auto">
          Become part of over 130 years of golfing tradition at Heaton Moor Golf
          Club. Flexible membership options for every golfer.
        </p>
      </div>
    </div>
  </div>

  <!-- Membership Options -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          2025 Membership Options
        </h2>
        <p class="text-lg text-gray-600">
          Choose the membership that fits your lifestyle and budget
        </p>
      </div>

      <!-- Full Memberships -->
      <div class="mb-16">
        <h3 class="text-2xl font-semibold text-gray-900 mb-8">
          Full Memberships
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div
            class="bg-white border-2 border-golf-green-200 rounded-lg p-6 shadow-lg"
          >
            <div class="text-center mb-6">
              <h4 class="text-xl font-semibold text-golf-green-800 mb-2">
                7-Day Membership
              </h4>
              <div class="text-3xl font-bold text-golf-green-700 mb-2">
                £90<span class="text-lg">/month</span>
              </div>
              <div class="text-gray-600">or £1,080/year</div>
            </div>
            <ul class="space-y-2 text-gray-600 mb-6">
              <li class="flex items-center">
                <span class="text-golf-green-600 mr-2">✓</span>Unlimited access
                7 days a week
              </li>
              <li class="flex items-center">
                <span class="text-golf-green-600 mr-2">✓</span>All club
                competitions
              </li>
              <li class="flex items-center">
                <span class="text-golf-green-600 mr-2">✓</span>Full facility
                access
              </li>
              <li class="flex items-center">
                <span class="text-golf-green-600 mr-2">✓</span>£25 Bar Card
                credit
              </li>
            </ul>
          </div>

          <div
            class="bg-white border-2 border-golf-green-200 rounded-lg p-6 shadow-lg"
          >
            <div class="text-center mb-6">
              <h4 class="text-xl font-semibold text-golf-green-800 mb-2">
                6-Day Membership
              </h4>
              <div class="text-3xl font-bold text-golf-green-700 mb-2">
                £74<span class="text-lg">/month</span>
              </div>
              <div class="text-gray-600">or £890.40/year</div>
            </div>
            <ul class="space-y-2 text-gray-600 mb-6">
              <li class="flex items-center">
                <span class="text-golf-green-600 mr-2">✓</span>Monday-Friday,
                Sunday
              </li>
              <li class="flex items-center">
                <span class="text-golf-green-600 mr-2">✓</span>Most competitions
              </li>
              <li class="flex items-center">
                <span class="text-golf-green-600 mr-2">✓</span>Full facility
                access
              </li>
              <li class="flex items-center">
                <span class="text-golf-green-600 mr-2">✓</span>£25 Bar Card
                credit
              </li>
            </ul>
          </div>

          <div
            class="bg-white border-2 border-golf-green-200 rounded-lg p-6 shadow-lg"
          >
            <div class="text-center mb-6">
              <h4 class="text-xl font-semibold text-golf-green-800 mb-2">
                5-Day Membership
              </h4>
              <div class="text-3xl font-bold text-golf-green-700 mb-2">
                £68<span class="text-lg">/month</span>
              </div>
              <div class="text-gray-600">or £812.40/year</div>
            </div>
            <ul class="space-y-2 text-gray-600 mb-6">
              <li class="flex items-center">
                <span class="text-golf-green-600 mr-2">✓</span>Monday-Friday
                only
              </li>
              <li class="flex items-center">
                <span class="text-golf-green-600 mr-2">✓</span>Weekday
                competitions
              </li>
              <li class="flex items-center">
                <span class="text-golf-green-600 mr-2">✓</span>Perfect for
                professionals
              </li>
              <li class="flex items-center">
                <span class="text-golf-green-600 mr-2">✓</span>£25 Bar Card
                credit
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Intermediate Memberships -->
      <div class="mb-16">
        <h3 class="text-2xl font-semibold text-gray-900 mb-8">
          Intermediate Memberships (Ages 18-34)
        </h3>
        <div class="bg-golf-green-50 rounded-lg p-8">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h4 class="text-lg font-semibold text-golf-green-800 mb-4">
                Age-Based Pricing
              </h4>
              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span>18 years:</span><span class="font-semibold"
                    >£21.20/month</span>
                </div>
                <div class="flex justify-between">
                  <span>19 years:</span><span class="font-semibold"
                    >£23.34/month</span>
                </div>
                <div class="flex justify-between">
                  <span>20 years:</span><span class="font-semibold"
                    >£24.40/month</span>
                </div>
                <div class="flex justify-between">
                  <span>25 years:</span><span class="font-semibold"
                    >£38.18/month</span>
                </div>
                <div class="flex justify-between">
                  <span>30 years:</span><span class="font-semibold"
                    >£60.45/month</span>
                </div>
                <div class="flex justify-between">
                  <span>34 years:</span><span class="font-semibold"
                    >£81.65/month</span>
                </div>
              </div>
            </div>
            <div>
              <h4 class="text-lg font-semibold text-golf-green-800 mb-4">
                Benefits
              </h4>
              <ul class="space-y-2 text-gray-600">
                <li class="flex items-center">
                  <span class="text-golf-green-600 mr-2">✓</span>Full club
                  access
                </li>
                <li class="flex items-center">
                  <span class="text-golf-green-600 mr-2">✓</span>All
                  competitions
                </li>
                <li class="flex items-center">
                  <span class="text-golf-green-600 mr-2">✓</span>Progressive
                  pricing
                </li>
                <li class="flex items-center">
                  <span class="text-golf-green-600 mr-2">✓</span>£25 Bar Card
                  credit
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Junior Memberships -->
      <div class="mb-16">
        <h3 class="text-2xl font-semibold text-gray-900 mb-8">
          Junior Memberships
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div
            class="bg-white border-2 border-golf-green-200 rounded-lg p-6 shadow-lg"
          >
            <div class="text-center mb-6">
              <h4 class="text-xl font-semibold text-golf-green-800 mb-2">
                Junior (11-17 years)
              </h4>
              <div class="text-3xl font-bold text-golf-green-700 mb-2">
                £63.65<span class="text-lg">/year</span>
              </div>
            </div>
            <ul class="space-y-2 text-gray-600">
              <li class="flex items-center">
                <span class="text-golf-green-600 mr-2">✓</span>Junior coaching
                programs
              </li>
              <li class="flex items-center">
                <span class="text-golf-green-600 mr-2">✓</span>Junior
                competitions
              </li>
              <li class="flex items-center">
                <span class="text-golf-green-600 mr-2">✓</span>Skill development
              </li>
            </ul>
          </div>

          <div
            class="bg-white border-2 border-golf-green-200 rounded-lg p-6 shadow-lg"
          >
            <div class="text-center mb-6">
              <h4 class="text-xl font-semibold text-golf-green-800 mb-2">
                Cub (10 and under)
              </h4>
              <div class="text-3xl font-bold text-golf-green-700 mb-2">
                £31.83<span class="text-lg">/year</span>
              </div>
            </div>
            <ul class="space-y-2 text-gray-600">
              <li class="flex items-center">
                <span class="text-golf-green-600 mr-2">✓</span>Introduction to
                golf
              </li>
              <li class="flex items-center">
                <span class="text-golf-green-600 mr-2">✓</span>Family programs
              </li>
              <li class="flex items-center">
                <span class="text-golf-green-600 mr-2">✓</span>Fun learning
                environment
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Special Memberships -->
      <div class="mb-16">
        <h3 class="text-2xl font-semibold text-gray-900 mb-8">
          Special Memberships
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-white border border-gray-200 rounded-lg p-6">
            <h4 class="text-lg font-semibold text-golf-green-800 mb-2">
              Country
            </h4>
            <div class="text-2xl font-bold text-golf-green-700 mb-2">
              £203.69/year
            </div>
            <p class="text-gray-600 text-sm">
              For members living far from club
            </p>
          </div>

          <div class="bg-white border border-gray-200 rounded-lg p-6">
            <h4 class="text-lg font-semibold text-golf-green-800 mb-2">
              Social
            </h4>
            <div class="text-2xl font-bold text-golf-green-700 mb-2">
              £35.00/year
            </div>
            <p class="text-gray-600 text-sm">Clubhouse access only</p>
          </div>

          <div class="bg-white border border-gray-200 rounded-lg p-6">
            <h4 class="text-lg font-semibold text-golf-green-800 mb-2">CASC</h4>
            <div class="text-2xl font-bold text-golf-green-700 mb-2">
              £480/year
            </div>
            <p class="text-gray-600 text-sm">Means-tested membership</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Member Benefits -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Member Benefits</h2>
        <p class="text-lg text-gray-600">
          Enjoy exceptional value and exclusive privileges
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="text-golf-green-600 text-3xl mb-4">🏌️</div>
          <h3 class="text-lg font-semibold mb-3">Unlimited Course Access</h3>
          <p class="text-gray-600">
            Play when, how often, and how you like on our championship course.
          </p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="text-golf-green-600 text-3xl mb-4">🏆</div>
          <h3 class="text-lg font-semibold mb-3">World Handicap System</h3>
          <p class="text-gray-600">
            Official WHS handicap for competitions and course rating.
          </p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="text-golf-green-600 text-3xl mb-4">👥</div>
          <h3 class="text-lg font-semibold mb-3">Active Ladies Section</h3>
          <p class="text-gray-600">
            Best Ladies Section with 80+ active members and regular events.
          </p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="text-golf-green-600 text-3xl mb-4">💳</div>
          <h3 class="text-lg font-semibold mb-3">Bar Card Discounts</h3>
          <p class="text-gray-600">
            Up to 20% savings with included £25 bar card credit.
          </p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="text-golf-green-600 text-3xl mb-4">🤝</div>
          <h3 class="text-lg font-semibold mb-3">1892 Club Network</h3>
          <p class="text-gray-600">
            Reciprocal golf at historic clubs nationwide.
          </p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="text-golf-green-600 text-3xl mb-4">💰</div>
          <h3 class="text-lg font-semibold mb-3">Flexible Payment</h3>
          <p class="text-gray-600">
            Monthly payment options with no additional charges.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Application Process -->
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">How to Apply</h2>
        <p class="text-lg text-gray-600">Join our club in four simple steps</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="flex items-start">
          <div
            class="bg-golf-green-600 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold mr-4 mt-1"
          >
            1
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-2">Choose Your Membership</h3>
            <p class="text-gray-600">
              Select the membership option that best fits your needs and budget.
            </p>
          </div>
        </div>

        <div class="flex items-start">
          <div
            class="bg-golf-green-600 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold mr-4 mt-1"
          >
            2
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-2">Complete Application</h3>
            <p class="text-gray-600">
              Fill out the membership application form with required
              documentation.
            </p>
          </div>
        </div>

        <div class="flex items-start">
          <div
            class="bg-golf-green-600 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold mr-4 mt-1"
          >
            3
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-2">Committee Review</h3>
            <p class="text-gray-600">
              Your application will be reviewed by our membership committee.
            </p>
          </div>
        </div>

        <div class="flex items-start">
          <div
            class="bg-golf-green-600 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold mr-4 mt-1"
          >
            4
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-2">Welcome to the Club</h3>
            <p class="text-gray-600">
              Receive your welcome pack and begin enjoying all member benefits.
            </p>
          </div>
        </div>
      </div>

      <div class="text-center mt-12">
        <div class="bg-golf-green-50 rounded-lg p-8">
          <h3 class="text-xl font-semibold text-golf-green-800 mb-4">
            Ready to Join?
          </h3>
          <p class="text-gray-600 mb-6">
            Contact our admin team to start your membership application today.
          </p>
          <div class="space-y-2">
            <p class="font-semibold">📞 0161-432-2134</p>
            <p class="font-semibold">✉️ info@heatonmoorgolfclub.co.uk</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

