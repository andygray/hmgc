---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

// Get content from collections
const staffContent = await getCollection("staff");
const visitorsContent = await getCollection("visitors");
const facilitiesContent = await getCollection("facilities");

// Get specific content items
