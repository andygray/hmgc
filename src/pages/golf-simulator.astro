---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

// Get content from play collection
const playContent = await getCollection("play");
const simulatorInfo = playContent.find(
  (item) => item.slug === "golf-simulator"
);

if (!simulatorInfo) {
  throw new Error("Golf simulator content not found");
}

const { Content } = await simulatorInfo.render();
---

<Layout title={simulatorInfo.data.title}>
  <div class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section
      class="bg-gradient-to-r from-club-navy-800 to-club-navy-600 text-white py-20"
    >
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">
            {simulatorInfo.data.title}
          </h1>
          <p class="text-xl text-club-navy-100 max-w-3xl mx-auto">
            {simulatorInfo.data.description}
          </p>
        </div>
      </div>
    </section>

    <!-- Equipment Info Section -->
    <section class="py-16 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-6">
              Premium Equipment
            </h2>
            <div class="space-y-4">
              <div class="flex items-center">
                <span class="text-club-gold-600 mr-3">üéØ</span>
                <span class="font-semibold">Model:</span>
                <span class="ml-2"
                  >{simulatorInfo.data.equipment.simulator_model}</span
                >
              </div>
              <div class="flex items-center">
                <span class="text-club-gold-600 mr-3">üìä</span>
                <span class="font-semibold">Software:</span>
                <span class="ml-2">{simulatorInfo.data.equipment.software}</span
                >
              </div>
              <div class="flex items-center">
                <span class="text-club-gold-600 mr-3">üìç</span>
                <span class="font-semibold">Location:</span>
                <span class="ml-2">{simulatorInfo.data.equipment.location}</span
                >
              </div>
              <div class="flex items-center">
                <span class="text-club-gold-600 mr-3">üî¢</span>
                <span class="font-semibold">Available:</span>
                <span class="ml-2"
                  >{simulatorInfo.data.equipment.quantity} Simulators</span
                >
              </div>
            </div>
          </div>

          <div class="bg-club-navy-50 p-8 rounded-lg">
            <h3 class="text-xl font-bold text-gray-900 mb-4">Key Features</h3>
            <ul class="space-y-2">
              {
                simulatorInfo.data.features.map((feature) => (
                  <li class="flex items-start">
                    <span class="text-club-gold-600 mr-2 mt-1">‚úì</span>
                    <span>{feature}</span>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Main Content Section (Using Slot) -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-lg shadow-lg p-8">
          <div
            class="prose prose-lg prose-club-navy max-w-none prose-headings:text-club-navy-800 prose-a:text-club-gold-600 prose-strong:text-club-navy-700"
          >
            <Content />
          </div>
        </div>
      </div>
    </section>

    <!-- Pricing & Booking Info -->
    <section class="py-16 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 gap-12">
          <!-- Pricing Info -->
          <div class="bg-club-navy-50 p-8 rounded-lg">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">
              Session Information
            </h3>
            <div class="space-y-4">
              <div class="flex justify-between items-center">
                <span class="font-semibold">Duration Guide:</span>
                <span>{simulatorInfo.data.pricing.duration_guide}</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="font-semibold">Max Players:</span>
                <span
                  >{simulatorInfo.data.pricing.max_players} per simulator</span
                >
              </div>
              <div class="pt-4 border-t">
                <p class="text-sm text-gray-600">
                  {simulatorInfo.data.pricing.booking_info}
                </p>
              </div>
            </div>
          </div>

          <!-- Facilities -->
          <div class="bg-gray-50 p-8 rounded-lg">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">
              Facilities Available
            </h3>
            <div class="space-y-3">
              <div class="flex items-center">
                <span class="text-club-gold-600 mr-3">üÖøÔ∏è</span>
                <span
                  >Free Parking: {
                    simulatorInfo.data.facilities.parking ? "Yes" : "No"
                  }</span
                >
              </div>
              <div class="flex items-center">
                <span class="text-club-gold-600 mr-3">üöø</span>
                <span
                  >Changing Rooms: {
                    simulatorInfo.data.facilities.changing_rooms
                      ? "Available"
                      : "Not Available"
                  }</span
                >
              </div>
              <div class="flex items-center">
                <span class="text-club-gold-600 mr-3">üöª</span>
                <span
                  >Toilets: {
                    simulatorInfo.data.facilities.toilets
                      ? "Available"
                      : "Not Available"
                  }</span
                >
              </div>
              <div class="flex items-center">
                <span class="text-club-gold-600 mr-3">üç∫</span>
                <span
                  >Bar: {simulatorInfo.data.facilities.bar_distance} away</span
                >
              </div>
              <div class="flex items-center">
                <span class="text-club-gold-600 mr-3">üçΩÔ∏è</span>
                <span
                  >Food: {
                    simulatorInfo.data.facilities.food_available
                      ? "Available (based on opening hours)"
                      : "Not Available"
                  }</span
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Rules & Guidelines -->
    <section class="py-16 bg-club-navy-800 text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h3 class="text-2xl font-bold mb-8 text-center">Rules & Guidelines</h3>
        <div class="grid md:grid-cols-2 gap-6">
          {
            simulatorInfo.data.rules.map((rule, index) => (
              <div class="flex items-start">
                <span class="bg-club-gold-600 text-white rounded-full w-6 h-6 flex items-center justify-center text-sm font-bold mr-3 mt-1">
                  {index + 1}
                </span>
                <span class="text-club-navy-100">{rule}</span>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Booking Section -->
    <section class="py-16 bg-gray-900 text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h3 class="text-3xl font-bold mb-6">Ready to Book?</h3>
        <p class="text-gray-300 mb-8 max-w-2xl mx-auto">
          {simulatorInfo.data.booking.payment_method} available for standard bookings.
          Contact us directly for group bookings or special requirements.
        </p>

        <div class="grid md:grid-cols-2 gap-8 mb-8">
          <div class="bg-gray-800 p-6 rounded-lg">
            <h4 class="font-bold mb-3">Contact Information</h4>
            <div class="space-y-2 text-sm">
              <div class="flex items-center justify-center">
                <span class="mr-2">üìß</span>
                <a
                  href="mailto:{simulatorInfo.data.booking.contact_email}"
                  class="hover:text-club-gold-400 transition-colors"
                >
                  {simulatorInfo.data.booking.contact_email}
                </a>
              </div>
              <div class="flex items-center justify-center">
                <span class="mr-2">üìû</span>
                <a
                  href="tel:{simulatorInfo.data.booking.contact_phone.replace(/\s/g, '')}"
                  class="hover:text-club-gold-400 transition-colors"
                >
                  {simulatorInfo.data.booking.contact_phone}
                </a>
              </div>
            </div>
          </div>

          <div class="bg-gray-800 p-6 rounded-lg">
            <h4 class="font-bold mb-3">Operating Hours</h4>
            <p class="text-club-gold-400 font-semibold">
              {simulatorInfo.data.booking.operating_hours}
            </p>
            <p class="text-sm text-gray-400 mt-2">For bookings and inquiries</p>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="mailto:{simulatorInfo.data.booking.contact_email}"
            class="bg-club-navy-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-club-navy-700 transition-colors"
          >
            Email Us
          </a>
          <a
            href="tel:{simulatorInfo.data.booking.contact_phone.replace(/\s/g, '')}"
            class="bg-gray-700 text-white px-8 py-3 rounded-lg font-semibold hover:bg-gray-600 transition-colors"
          >
            Call Now
          </a>
        </div>
      </div>
    </section>
  </div>
</Layout>
