---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

// Get facilities content
const facilitiesContent = await getCollection("facilities");
const clubhouse = facilitiesContent.find((item) => item.slug === "clubhouse");
const { Content: ClubhouseContent } = clubhouse
  ? await clubhouse.render()
  : { Content: null };
---

<Layout title="Facilities - Heaton Moor Golf Club">
  <!-- Hero Section -->
  <section
    class="bg-gradient-to-r from-golf-green-800 to-golf-green-600 text-white py-16"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Club Facilities</h1>
        <p class="text-xl text-golf-green-100 max-w-3xl mx-auto">
          Modern amenities and exceptional facilities to enhance your golfing
          experience
        </p>
      </div>
    </div>
  </section>

  <!-- Clubhouse Section -->
  {
    clubhouse && (
      <section class="py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <div>
              <h2 class="text-3xl font-bold text-gray-900 mb-6">
                {clubhouse.data.title}
              </h2>
              <div class="prose prose-lg prose-club-navy max-w-none prose-headings:text-club-navy-800 prose-a:text-club-gold-600 prose-strong:text-club-navy-700">
                {ClubhouseContent && <ClubhouseContent />}
              </div>
            </div>
            <div class="bg-golf-green-50 p-8 rounded-lg">
              <h3 class="text-xl font-semibold text-golf-green-800 mb-6">
                Quick Facts
              </h3>
              <div class="space-y-4">
                <div class="flex items-center">
                  <span class="text-golf-green-600 mr-3">🏠</span>
                  <span>
                    Function Room Capacity: {clubhouse.data.capacity} guests
                  </span>
                </div>
                <div class="flex items-center">
                  <span class="text-golf-green-600 mr-3">🍽️</span>
                  <span>Dining & Bar: 12:00 PM until late</span>
                </div>
                <div class="flex items-center">
                  <span class="text-golf-green-600 mr-3">🏌️</span>
                  <span>Golf Simulator Available</span>
                </div>
                <div class="flex items-center">
                  <span class="text-golf-green-600 mr-3">🛍️</span>
                  <span>Professional Shop</span>
                </div>
                <div class="flex items-center">
                  <span class="text-golf-green-600 mr-3">🚗</span>
                  <span>Ample Parking Available</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    )
  }

  <!-- Facilities Overview -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          All Our Facilities
        </h2>
        <p class="text-lg text-gray-600">
          Everything you need for the perfect golf experience
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="text-golf-green-600 text-4xl mb-4">🏌️‍♂️</div>
          <h3 class="text-xl font-semibold mb-3">Championship Course</h3>
          <p class="text-gray-600">
            18-hole, par 70, 6000-yard parkland course in a beautiful
            conservation area setting.
          </p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="text-golf-green-600 text-4xl mb-4">🏠</div>
          <h3 class="text-xl font-semibold mb-3">Modern Clubhouse</h3>
          <p class="text-gray-600">
            Well-appointed clubhouse with dining facilities, bar, and function
            room for up to 120 guests.
          </p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="text-golf-green-600 text-4xl mb-4">🛍️</div>
          <h3 class="text-xl font-semibold mb-3">Professional Shop</h3>
          <p class="text-gray-600">
            Fully stocked pro shop with equipment from leading brands and expert
            fitting services.
          </p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="text-golf-green-600 text-4xl mb-4">🎯</div>
          <h3 class="text-xl font-semibold mb-3">Practice Facilities</h3>
          <p class="text-gray-600">
            Comprehensive practice areas including driving range, putting green,
            and short game area.
          </p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="text-golf-green-600 text-4xl mb-4">🎮</div>
          <h3 class="text-xl font-semibold mb-3">Golf Simulator</h3>
          <p class="text-gray-600">
            State-of-the-art golf simulator for year-round practice and
            entertainment.
          </p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="text-golf-green-600 text-4xl mb-4">🚗</div>
          <h3 class="text-xl font-semibold mb-3">Parking & Access</h3>
          <p class="text-gray-600">
            Ample parking facilities with easy access from M60 Junction 1
            (Stockport Town Centre).
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16 bg-golf-green-800 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold mb-6">Visit Our Facilities</h2>
      <p class="text-lg text-golf-green-200 mb-8 max-w-2xl mx-auto">
        Experience our exceptional facilities firsthand. Contact us to arrange a
        visit or book your next event.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="tel:0161-432-2134"
          class="bg-white text-golf-green-800 px-8 py-3 rounded-lg font-semibold hover:bg-golf-green-50 transition-colors"
        >
          Call: 0161-432-2134
        </a>
        <a
          href="mailto:info@heatonmoorgolfclub.co.uk"
          class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-golf-green-800 transition-colors"
        >
          Email Us
        </a>
      </div>
    </div>
  </section>
</Layout>
